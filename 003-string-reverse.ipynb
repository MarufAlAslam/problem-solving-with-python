   "source": [
    "Write a Python function to reverse a given string and return the reversed string."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 2,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "The string is:  maruf\n",
      "The reversed string is:  furam\n"
     ]
    }
   ],
   "source": [
    "str = input(\"Enter a string: \")\n",
    "print(\"The string is: \", str)\n",
    "\n",
    "# reverse function\n",
    "def reverse(str):\n",
    "    str = str[::-1]\n",
    "    return str\n",
    "\n",
    "print(\"The reversed string is: \", reverse(str))\n"
   ]
